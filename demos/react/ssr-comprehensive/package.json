{
  "name": "ssr-comprehensive-demo",
  "version": "1.0.0",
  "type": "module",
  "description": "完整的SSR React演示项目，解决路由、数据获取、状态管理、事件处理、环境差异等关键问题",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "nodemon server/index.js",
    "dev:client": "webpack --mode development --watch --config webpack.client.js",
    "build": "npm run build:client && npm run build:server",
    "build:client": "webpack --mode production --config webpack.client.js",
    "build:server": "webpack --mode production --config webpack.server.js",
    "start": "node dist/server.js",
    "test": "echo \"Tests coming soon\""
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^6.0.1",
    "lru-cache": "^7.18.0",
    "morgan": "^1.10.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.0",
    "serialize-javascript": "^6.0.0",
    "styled-jsx": "^5.1.7"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/preset-react": "^7.18.6",
    "babel-loader": "^9.2.1",
    "concurrently": "^7.6.0",
    "css-loader": "^6.7.3",
    "html-webpack-plugin": "^5.5.0",
    "ignore-loader": "^0.1.2",
    "mini-css-extract-plugin": "^2.7.0",
    "nodemon": "^2.0.20",
    "style-loader": "^3.3.1",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-node-externals": "^3.0.0"
  },
  "keywords": [
    "react",
    "ssr",
    "server-side-rendering",
    "webpack",
    "express",
    "router",
    "hydration",
    "state-management"
  ],
  "author": "Demo Project",
  "license": "MIT"
}

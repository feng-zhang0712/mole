{
  "name": "micro-frontend-iframe-demo",
  "version": "1.0.0",
  "description": "基于Iframe的微前端架构演示项目",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:app1\" \"npm run dev:app2\" \"npm run dev:app3\"",
    "dev:main": "webpack serve --config webpack.main.config.js --mode development",
    "dev:app1": "webpack serve --config webpack.app1.config.js --mode development",
    "dev:app2": "webpack serve --config webpack.app2.config.js --mode development",
    "dev:app3": "webpack serve --config webpack.app3.config.js --mode development",
    "build": "npm run build:main && npm run build:app1 && npm run build:app2 && npm run build:app3",
    "build:main": "webpack --config webpack.main.config.js --mode production",
    "build:app1": "webpack --config webpack.app1.config.js --mode production",
    "build:app2": "webpack --config webpack.app2.config.js --mode production",
    "build:app3": "webpack --config webpack.app3.config.js --mode production",
    "start": "http-server dist -p 8080 -o"
  },
  "keywords": [
    "micro-frontend",
    "iframe",
    "react",
    "webpack",
    "architecture"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.22.0",
    "babel-loader": "^9.1.0",
    "concurrently": "^8.2.0",
    "css-loader": "^6.8.0",
    "html-webpack-plugin": "^5.5.0",
    "http-server": "^14.1.1",
    "style-loader": "^3.3.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0",
    "webpack-dev-server": "^4.15.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
